<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textColor="#f4f5f8"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ft_rl_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#1430ac">

        <ImageView
            android:id="@+id/ft_img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_back_alpha" />

        <TextView
            android:id="@+id/ft_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="#f4f5f8"
            android:text="title" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/ft_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ft_rl_title"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:visibility="gone" />

    <ListView
        android:id="@+id/ft_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ft_rl_title"
        android:layout_marginTop="2dp"
        android:divider="#cfd9e0"
        android:dividerHeight="1dp"
        android:background="@drawable/list_first_item_selector"
        android:layout_weight="1" />


</RelativeLayout>
